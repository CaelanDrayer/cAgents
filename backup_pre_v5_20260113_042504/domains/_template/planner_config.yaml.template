# Domain Planner Configuration Template
# Copy this file to: Agent_Memory/_system/domains/{domain_name}/planner_config.yaml
# Replace all {DOMAIN_NAME} placeholders with your domain name

domain: {DOMAIN_NAME}
version: 1.0
description: "Task decomposition and planning rules for {DOMAIN_NAME} domain"

# Available Agents
# List all agents available in this domain for task assignment

available_agents:
  # Format:
  # - agent_name: "Brief description of capabilities"

  # Example agents (replace with actual domain agents):
  # - domain-specialist: "Primary domain expert"
  # - domain-analyst: "Analysis and research specialist"
  # - domain-coordinator: "Coordination and project management"

# Task Patterns
# Predefined task decomposition patterns for common request types

task_patterns:
  # Format:
  # pattern_name:
  #   description: "What this pattern accomplishes"
  #   triggers: [keywords that activate this pattern]
  #   tasks:
  #     - id: task_identifier
  #       description: "Task description with {placeholders}"
  #       agent: agent_name
  #       type: create|modify|analyze|validate|test
  #       dependencies: [prerequisite_task_ids]
  #       estimated_effort: "time estimate"
  #
  #   acceptance_criteria:
  #     - "Criterion 1"
  #     - "Criterion 2"

  example_pattern:
    description: "Example task pattern for {DOMAIN_NAME}"
    triggers: [example, sample, demo]

    tasks:
      - id: task_001
        description: "Initial analysis of {target}"
        agent: domain-analyst
        type: analyze
        dependencies: []
        estimated_effort: "30 minutes"

      - id: task_002
        description: "Create {artifact} based on analysis"
        agent: domain-specialist
        type: create
        dependencies: [task_001]
        estimated_effort: "1-2 hours"

      - id: task_003
        description: "Validate {artifact} meets requirements"
        agent: domain-coordinator
        type: validate
        dependencies: [task_002]
        estimated_effort: "30 minutes"

    acceptance_criteria:
      - "{artifact} created and meets specifications"
      - "All analysis documented"
      - "Quality checks passed"

# Task Types
# Definitions for different types of tasks in this domain

task_types:
  create:
    description: "Create new artifacts, documents, or deliverables"
    typical_agents: [domain-specialist]

  modify:
    description: "Modify existing artifacts or deliverables"
    typical_agents: [domain-specialist, domain-analyst]

  analyze:
    description: "Analyze data, situations, or requirements"
    typical_agents: [domain-analyst]

  validate:
    description: "Validate outputs meet acceptance criteria"
    typical_agents: [domain-coordinator, domain-specialist]

  test:
    description: "Test functionality or quality"
    typical_agents: [domain-specialist]

# Acceptance Criteria Templates
# Reusable acceptance criteria patterns

acceptance_templates:
  deliverable_complete:
    - "All required sections present"
    - "Meets specified requirements"
    - "Reviewed and approved"
    - "Documentation included"

  analysis_complete:
    - "Data sources identified and cited"
    - "Analysis methodology documented"
    - "Findings clearly stated"
    - "Recommendations provided"

  quality_validated:
    - "Quality standards met"
    - "No critical issues found"
    - "Stakeholder requirements satisfied"
    - "Ready for delivery"

# Dependency Patterns
# Common dependency relationships between tasks

dependency_patterns:
  sequential:
    description: "Tasks must execute in strict order"
    pattern: "A → B → C → D"

  parallel:
    description: "Tasks can execute concurrently"
    pattern: "A → [B, C, D] → E"

  convergent:
    description: "Multiple tasks feed into one final task"
    pattern: "[A, B, C] → D"

  divergent:
    description: "One task spawns multiple parallel tasks"
    pattern: "A → [B, C, D]"

# Planning Strategies by Tier
# How planning depth varies by complexity tier

planning_strategies:
  tier_0:
    planning_depth: none
    task_count: 0
    description: "No planning phase for tier 0 questions"

  tier_1:
    planning_depth: minimal
    task_count: 1-2
    planning_time: "< 30 seconds"
    description: "Minimal planning, simple task list"

  tier_2:
    planning_depth: standard
    task_count: 3-8
    planning_time: "1-3 minutes"
    description: "Full breakdown with dependencies and acceptance criteria"

  tier_3:
    planning_depth: deep
    task_count: 5-15
    planning_time: "3-7 minutes"
    description: "Parallel streams, specialist consultation, checkpoints"

  tier_4:
    planning_depth: expert
    task_count: 10-30+
    planning_time: "5-10 minutes"
    description: "Multi-phase, reviews, risk analysis, HITL consultation"

# Domain-Specific Notes
# Add any domain-specific planning considerations here

domain_notes: |
  Add domain-specific planning guidelines here.
  Include typical project structures, workflows, or methodologies for {DOMAIN_NAME}.
